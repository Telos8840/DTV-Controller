            <Button Grid.Row="3" Grid.Column="2" Content="RESET INDEX" Height="40" Width="230" Margin="0, 25">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding}" MethodName="ResetIndex"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>

