             d:DesignHeight="650" d:DesignWidth="1230"
             DataContext="{Binding Source={StaticResource Locator}, Path=MapViewModel}">
    <UserControl.Resources>
        <DataTemplate x:Key="TeamName" DataType="{x:Type model:CoreTeams}">
            <TextBlock Text="{Binding Name}" Margin="0, 7.6, 0, 0"/>
        </DataTemplate>
        <DataTemplate x:Key="Stadium" DataType="{x:Type model:CoreTeams}">
            <TextBlock Text="{Binding Stadium}" Margin="0, 7.6, 0, 0"/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="20, 20, 30, 40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230*"/>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0, 0, 5, 0">

            <GroupBox Header="INPUT SETUP" Margin="0, 30" Padding="10" FontSize="15" BorderBrush="DarkRed" Foreground="White" Height="120">
                <metro:ToggleSwitch OffHeader="PRE-GAME" OnHeader="LIVE-GAME" IsChecked="{Binding IsLiveGame}" Width="140">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Checked">
                            <ei:CallMethodAction TargetObject="{Binding}" MethodName="SetMultiInput"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="Unchecked">
                            <ei:CallMethodAction TargetObject="{Binding}" MethodName="SetOneInput"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </metro:ToggleSwitch>
            </GroupBox>

            <GroupBox Header="SET WEEK" Padding="10" FontSize="15" BorderBrush="DarkRed" Foreground="White" Height="120" Margin="0, 10, 0, 25">
                <StackPanel Orientation="Vertical">
                    <StackPanel Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center"
                                VerticalAlignment="Bottom" Margin="0, 0, 0, 10">
                        <TextBlock Text="Week" Margin="7, 0" FontSize="25" Foreground="White" />
                        <TextBlock Text="{Binding ElementName=WeekSlider, Path=Value}" FontSize="25" Foreground="White" />
                    </StackPanel>
                    <Slider x:Name="WeekSlider" Value="{Binding WeekNumber}" TickFrequency="1"
                            IsSnapToTickEnabled="True" Grid.ColumnSpan="4" Margin="0, 0, 0, -20" Minimum="0"
                            Maximum="17" AutoToolTipPlacement="BottomRight" Width="190" HorizontalAlignment="Center"
                            VerticalAlignment="Bottom">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="ValueChanged">
                                <ei:CallMethodAction TargetObject="{Binding}" MethodName="GetTeams" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Slider>
                </StackPanel>
            </GroupBox>
            <Button Grid.Row="3" Grid.Column="2" Content="SET MAP" Height="40" Width="230" Margin="0, 25" IsEnabled="{Binding IsWeekSet}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding}" MethodName="SetMap"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Grid.Row="3" Grid.Column="2" Content="RESET DATA" Height="40" Width="230" Margin="0, 25">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ei:CallMethodAction TargetObject="{Binding}" MethodName="ResetMap"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
